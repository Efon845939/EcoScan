rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access to all documents
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own reward documents
    match /users/{userId}/rewards/{rewardId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own carbon footprint documents
    match /users/{userId}/carbon-footprint/{footprintId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to write to the dev_test collection for health checks
    match /dev_test/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

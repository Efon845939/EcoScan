rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // yardımcı fonksiyonlar
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Kullanıcı profili
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Kullanıcının kendi ödülleri
    match /users/{userId}/rewards/{rewardId} {
      allow read, write: if isOwner(userId);
    }

    // Kullanıcının kendi karbon ayak izi kayıtları
    match /users/{userId}/carbon-footprint/{footprintId} {
      allow read, write: if isOwner(userId);
    }

    // Health check / debug koleksiyonu
    // profile sayfasındaki health check burada:
    // doc(firestore, "dev_test", firebaseUser.uid)
    match /dev_test/{userId} {
      // sadece kendi dokümanını okuyup yazabilsin
      allow read, write: if isOwner(userId);
    }

    // Default: her şeyi kapat
    // Daha spesifik match'ler ÜSTTE olduğu sürece bu hiçbir şeyi bozmaz.
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
